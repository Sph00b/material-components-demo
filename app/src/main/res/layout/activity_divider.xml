<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <include
        android:id="@+id/app_bar_container"
        layout="@layout/app_bar_demo"/>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_span_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_view_span_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_view_span_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Types"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_view_span_types_fullbleed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full-bleed dividers"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/image_view_divider_fullbleed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_large"
                android:layout_gravity="center"
                android:src="@drawable/sample_divider_fullbleed"
                android:adjustViewBounds="true"
                android:contentDescription="@string/divider_fullbleed_sample_description"/>

            <TextView
                android:id="@+id/text_view_span_types_inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inset dividers"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/image_view_divider_inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_large"
                android:layout_gravity="center"
                android:src="@drawable/sample_divider_inset"
                android:adjustViewBounds="true"
                android:contentDescription="@string/divider_inset_sample_description"/>

            <TextView
                android:id="@+id/text_view_span_types_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Middle dividers"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/image_view_divider_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_large"
                android:layout_gravity="center"
                android:src="@drawable/sample_divider_middle"
                android:adjustViewBounds="true"
                android:contentDescription="@string/divider_middle_sample_description"/>

            <TextView
                android:id="@+id/text_view_span_types_subheaders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dividers with subheaders"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/image_view_divider_subheaders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_large"
                android:layout_gravity="center"
                android:src="@drawable/sample_divider_subheaders"
                android:adjustViewBounds="true"
                android:contentDescription="@string/divider_subheaders_sample_description"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>